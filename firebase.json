{
    "hosting": {
        "public": "build/web",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    },
                    {
                        "key": "Pragma",
                        "value": "no-cache"
                    },
                    {
                        "key": "Expires",
                        "value": "0"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "flutter": {
        "platforms": {
            "dart": {
                "lib/firebase_options.dart": {
                    "projectId": "inventory-management-7a979",
                    "configurations": {
                        "web": "1:95434296068:web:6e7d1288a76ec3f7595e51"
                    }
                }
            }
        }
    }
}